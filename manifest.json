{

  "manifest_version": 2,
  "name": "text-swapper",
  "version": "1.0",
  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "text-swapper-gsaqui@gmail.com",
      "strict_min_version": "48.0"
    }
  },

  "background": {
    "scripts": ["background.js", "swapper.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  
  "icons": {
    "16": "icons/page-16.png",
    "32": "icons/page-32.png",
    "48": "icons/page-48.png"
  }

}
